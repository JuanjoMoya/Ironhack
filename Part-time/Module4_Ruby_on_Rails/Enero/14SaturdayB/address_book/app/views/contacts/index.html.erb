<h1>List of contacts</h1>

<ul>
  <% @contacts.each do |contact| %>
    <li><%= link_to contact.name, "/contacts/#{contact.id}" %></li>
  <% end %>
</ul>

<%= link_to "New contact", "/contacts/new" %>
<%= link_to "Favorite contacts", "/contacts/favorite_contacts" %>

<form action="/contacts/search" method="POST">
	<label>Enter a letter to search by:</label>
	<input type="text" name="first_letter">
	<button type="submit">Search</button>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>
