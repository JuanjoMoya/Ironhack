<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <link rel="stylesheet" type="text/css" href="/main.css"
</head>
<body>
  <h1>Welcome to the TodoList</h1>
  <ul>
    <% @todo_list.tasks.each do |task| %>
      <li><%= task.content %></li>
    <% end %>
  </ul>

  <% @todo_list.tasks.each do |task| %>
	<ul>
		<li>
		<% if task.complete? %>
			<strike><%= task.content %></strike>

			<form action="/undo_task/<%= task.id %>" method="POST">
				<button type="submit" name="task_undone" value="<%= task.id %>">UNDO</button>
			</form>
		<% else %>
			<%= task.content %>

			<form action="/complete_task/<%= task.id %>" method="POST">
				<button type="submit" name="task_completed" value="<%= task.id %>">DONE</button>
			</form>
		<% end %>
		<form action="/delete_task/<%= task.id %>" method="POST">
			<button type="submit" name="task_deleted" value="<%= task.id %>">DELETE</button>
		</form>
		</li>
	</ul>
  <% end %>


  <a href ="/new_task"> Add new task
  </a>
</body>
</html
